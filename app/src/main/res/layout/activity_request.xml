<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/request_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="다음 항목 사용에 동의해 주세요"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/request_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="130sp"
        android:text="기기 및 앱 기록"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/request_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="130sp"
        android:text="ID"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/request_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="130sp"
        android:text="사진/미디어/파일"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/request_txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="130sp"
        android:text="마이크"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/request_txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="130sp"
        android:text="WI-FI 연결 정보"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/request_txt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="130sp"
        android:text="기기 ID 및 통화 정보"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt6"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_restore_black_24dp"
        android:paddingLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt1"
        android:layout_marginTop="93dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_black_24dp"
        android:paddingLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt2"
        android:layout_marginTop="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_photo_library_black_24dp"
        android:paddingLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt3"
        android:layout_marginTop="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_mic_none_black_24dp"
        android:paddingLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt4"
        android:layout_marginTop="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_network_wifi_black_24dp"
        android:paddingLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt5"
        android:layout_marginTop="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_perm_device_information_black_24dp"
        android:paddingLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/request_txt6"
        android:layout_marginTop="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="64dp"
        android:text="동의"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_txt7" />

</androidx.constraintlayout.widget.ConstraintLayout>