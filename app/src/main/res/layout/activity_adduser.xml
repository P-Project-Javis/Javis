<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AdduserActivity">

    <include android:id="@+id/adduser_topbar"
        layout="@layout/layout_topbar"/>

    <LinearLayout
        android:id="@+id/adduser_nameWrap"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/bg_round_layout"
        app:layout_constraintTop_toBottomOf="@+id/adduser_topbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:layout_margin="20dp">

        <TextView
            android:text="이름을 입력하세요"
            style="@style/SettingTitleStyle"/>

        <EditText
            android:id="@+id/adduser_inputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:hint="이름"
            android:textSize="25sp"/>

        <ImageButton
            android:id="@+id/adduser_nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward_black_48dp"
            android:background="@drawable/bg_round_button"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/adduser_voiceWrap"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/bg_round_layout"
        app:layout_constraintTop_toBottomOf="@+id/adduser_topbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:visibility="visible">

        <TextView
            android:text="목소리를 녹음하세요"
            style="@style/SettingTitleStyle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="* 최대 20초까지만 가능합니다.\n* 배경음악이 없도록 녹음하세요.\n* 다른 사람의 목소리와 섞이지 않게 녹음하세요."/>

        <ImageButton
            android:id="@+id/adduser_recordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic_none_black_48dp"
            android:background="@drawable/bg_round_button"
            android:padding="10dp"
            android:layout_margin="30dp"/>

        <ImageButton
            android:id="@+id/adduser_confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_48dp"
            android:background="@drawable/bg_round_button"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/adduser_checkerWrap"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/adduser_topbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/adduser_nameChecker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
            android:tint="@color/colorAccent"
            android:padding="5dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/adduser_voiceChecker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
            android:tint="@color/colorAccent"
            android:padding="5dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>