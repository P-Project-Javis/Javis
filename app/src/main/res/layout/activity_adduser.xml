<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdduserActivity">

    <ImageView
        android:id="@+id/adduser_mic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_mic_none_black_24dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="50dp"/>

    <include android:id="@+id/adduser_topbar"
        layout="@layout/layout_topbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/adduser_topbar"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/adduser_checker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic_black_24dp"
            android:background="@drawable/bg_round_button"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/adduser_checker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_text_fields_black_24dp"
            android:background="@drawable/bg_round_button"/>

    </LinearLayout>

    <TextView
        android:id="@+id/adduser_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_new_voice"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/adduser_topbar"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/adduser_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="이름"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/adduser_confirmButton"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"/>

    <ImageButton
        android:id="@+id/adduser_confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        android:background="@drawable/bg_round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>