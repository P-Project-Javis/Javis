<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewActivity">

    <ImageView
        android:id="@+id/new_mic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_mic_none_black_24dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="50dp"/>

    <include android:id="@+id/new_toolbar"
        layout="@layout/layout_topbar"/>

    <TextView
        android:id="@+id/main_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_new_voice"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/new_toolbar"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/new_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="이름"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/new_confirmButton"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"/>

    <ImageButton
        android:id="@+id/new_confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        android:background="@drawable/bg_round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>