<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewActivity">

    <include layout="@layout/layout_topbar"/>

    <ImageView
        android:id="@+id/mic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="50dp"
        android:src="@drawable/ic_mic_none_black_24dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/message"
        android:layout_width="332dp"
        android:layout_height="59dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="548dp"
        android:gravity="center"
        android:text="마이크를 누르고 새로 등록할 사용자의 목소리를 들려주세요"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="39dp" />

    <EditText
        android:layout_width="347dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:hint="등록할 사용자의 이름을 입력해주세요"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="550dp" />

    <ImageButton
        android:id="@+id/addconfirmButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="548dp"
        android:background="@drawable/bg_round_button"
        android:padding="10dp"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>