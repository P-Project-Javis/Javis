<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PermissionActivity">

    <LinearLayout
        android:id="@+id/permission_wrap"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_round_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/permission_confirmButton"
        android:padding="10dp"
        android:layout_margin="20dp">

        <TextView
            android:text="권한 요청"
            style="@style/SettingTitleStyle"/>

        <TextView
            android:id="@+id/permission_message"
            android:text="앱 사용을 위해 아래의 권한이 필요합니다"
            style="@style/SettingTitleStyle"
            android:textSize="18sp"
            android:layout_marginTop="30dp"/>

        <ListView
            android:id="@+id/permission_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/permission_confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동의"
        android:textSize="18sp"
        android:background="@drawable/bg_round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>