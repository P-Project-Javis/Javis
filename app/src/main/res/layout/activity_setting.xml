<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SettingActivity">

    <include android:id="@+id/setting_topbar"
        layout="@layout/layout_topbar"/>

    <LinearLayout
        android:id="@+id/setting_wrap"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_round_layout"
        app:layout_constraintTop_toBottomOf="@+id/setting_topbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:layout_margin="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="사용자 설정"
                    style="@style/SettingTitleStyle"/>

                <Button
                    android:id="@+id/setting_lookup"
                    android:text="사용자 목록 조회"
                    style="@style/SettingButtonStyle"/>

                <Button
                    android:id="@+id/setting_adduser"
                    android:text="사용자 추가"
                    style="@style/SettingButtonStyle"/>

                <Button
                    android:id="@+id/setting_editUser"
                    android:text="사용자 수정"
                    style="@style/SettingButtonStyle"/>

                <Button
                    android:id="@+id/setting_removeUser"
                    android:text="사용자 삭제"
                    style="@style/SettingButtonStyle"/>

                <Button
                    android:id="@+id/setting_clearUser"
                    android:text="사용자 목록 초기화"
                    style="@style/SettingButtonStyle"/>

                <include layout="@layout/layout_horizontal_line"/>

                <TextView
                    android:text="앱 정보"
                    style="@style/SettingTitleStyle"/>

                <TextView
                    android:id="@+id/setting_appVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Javis 버전: "
                    android:textSize="18sp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/setting_developer"
                    android:text="개발자"
                    style="@style/SettingButtonStyle"/>

                <Button
                    android:id="@+id/setting_license"
                    android:text="라이선스"
                    style="@style/SettingButtonStyle"/>

                <Button
                    android:id="@+id/setting_openSource"
                    android:text="오픈소스 라이브러리"
                    style="@style/SettingButtonStyle"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>